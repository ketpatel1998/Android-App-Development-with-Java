<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaf2f8"
    tools:context="com.example.PersonalSkillDevelopment.Qustion1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:padding="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:text="Scince Quiz"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Level "
                android:textSize="20dp"
                android:id="@+id/tvlevel"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Q-1 "
                    android:textSize="24dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question1"
                    android:textSize="24dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/tvquestion1"/>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rdgoption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="@android:color/black"
                android:id="@+id/tvoption1"
                android:layout_marginTop="20dp"
                android:text="option 1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="@android:color/black"
                android:id="@+id/tvoption2"
                android:layout_marginTop="20dp"
                android:text="option 2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="@android:color/black"
                android:id="@+id/tvoption3"
                android:layout_marginTop="20dp"
                android:text="option 3"/>

            <RadioButton
                android:id="@+id/tvoption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="@android:color/black"

                android:layout_marginTop="20dp"
                android:text="option 4"/>


            </RadioGroup>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnquestion1"
                android:text="Next"
                android:background="#3498db"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_gravity="right"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
