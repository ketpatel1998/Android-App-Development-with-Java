<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.PersonalSkillDevelopment.home_peskde"
    tools:showIn="@layout/app_bar_home_peskde">

    <FrameLayout
        android:id="@+id/registerformframe"
        android:background="#eaf2f8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Welcome "
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvusername"
                        android:text="Guest !"
                        android:textColor="@android:color/black"
                        android:textSize="33dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@android:color/black"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:id="@+id/tvuserhomecontent"
                    android:text="Hello User, Register Yourself In Personal Skill Development Program we are going to give you some skill development exersice like knowledge test, listening Test and so on!"

                    />

                <Button
                    android:id="@+id/btnhomeregister"

                    android:layout_marginTop="25dp"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:background="#3498db"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Now!"/>

            </LinearLayout>


        </ScrollView>


    </FrameLayout>

</LinearLayout>
